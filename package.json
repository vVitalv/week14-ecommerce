{
    "name": "maccaroni",
    "version": "0.0.2",
    "description": "Maccaroni E-commerce",
    "engines": {
        "node": "14.18.x",
        "npm": "6.14.x",
        "yarn": "1.22.x"
    },
    "main": "index.js",
    "scripts": {
        "docker-start-dev": "docker-compose -f \"docker\\DEV.docker-compose.yml\" up",
        "docker-stop-dev": "docker-compose -f \"docker\\DEV.docker-compose.yml\" down",
        "dev": "yarn run watch:server & yarn run watch:client ",
        "watch:client": "webpack serve --mode development --config ./webpack.development.config.js",
        "dev:server": "webpack  --watch --config webpack.development.config.js",
        "start:dev": "webpack serve --mode development --config ./webpack.development.config.js --open",
        "start": "cross-env NODE_ENV=production && node start.js",
        "clean": "rimraf dist",
        "build": "cross-env npm run clean && webpack --config webpack.production.config.js --progress --profile --color",
        "lint": "eslint ./client/**/**.js ./server/**/**.js ",
        "prettier": "prettier ./client/**/**.js ./server/**/**.js --write ",
        "lint:server": "eslint ./server/**/**.js",
        "test": "jest",
        "test:watch": "jest --watch",
        "coverage": "jest --coverage",
        "next:build": "next",
        "watch:server": "nodemon --legacy-watch start.js --watch server --watch client --exec \"npm run lint:server  --scripts-prepend-node-path && node\"",
        "build:prod": "cross-env NODE_ENV=production webpack --config webpack.production.config.js --progress --profile --color",
        "heroku-postbuild": "yarn run build:prod"
    },
    "author": "",
    "license": "MIT",
    "jest": {
        "setupFiles": [
            "<rootDir>/config/jest/shim.js"
        ],
        "collectCoverageFrom": [
            "app/**/*.{js,jsx,ts,tsx}"
        ],
        "moduleNameMapper": {
            "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/config/jest/assetsTransformer.js",
            "\\.(css|less)$": "<rootDir>/config/jest/assetsTransformer.js"
        },
        "testMatch": [
            "**/?(*.)(spec|test).js?(x)"
        ],
        "transform": {
            "\\.js$": "babel-jest"
        }
    },
    "dependencies": {
        "@babel/cli": "^7.17.6",
        "@babel/core": "^7.17.9",
        "@babel/plugin-proposal-class-properties": "^7.16.7",
        "@babel/plugin-proposal-decorators": "^7.17.9",
        "@babel/plugin-proposal-export-default-from": "^7.16.7",
        "@babel/plugin-proposal-export-namespace-from": "^7.16.7",
        "@babel/plugin-proposal-function-sent": "^7.16.7",
        "@babel/plugin-proposal-json-strings": "^7.16.7",
        "@babel/plugin-proposal-numeric-separator": "^7.16.7",
        "@babel/plugin-proposal-throw-expressions": "^7.16.7",
        "@babel/plugin-syntax-dynamic-import": "^7.8.3",
        "@babel/plugin-syntax-import-meta": "^7.10.4",
        "@babel/plugin-transform-runtime": "^7.17.0",
        "@babel/preset-env": "^7.16.11",
        "@babel/preset-flow": "^7.16.7",
        "@babel/preset-react": "^7.16.7",
        "@babel/preset-stage-3": "^7.8.3",
        "@babel/preset-typescript": "^7.16.7",
        "@babel/register": "^7.17.7",
        "@babel/runtime": "^7.17.9",
        "@emotion/babel-plugin": "^11.9.2",
        "babel-core": "7.0.0-bridge.0",
        "babel-eslint": "10.1.0",
        "babel-jest": "^27.5.1",
        "babel-loader": "^8.2.4",
        "babel-plugin-css-modules-transform": "^1.6.2",
        "babel-preset-react-boilerplate": "1.1.1",
        "babel-preset-react-hmre": "1.1.1",
        "bcrypt": "^5.0.1",
        "compression": "^1.7.4",
        "connected-react-router": "^6.9.1",
        "cookie-parser": "^1.4.5",
        "core-js": "^3.15.2",
        "cross-env": "^7.0.3",
        "dotenv": "^16.0.0",
        "express": "^4.17.1",
        "history": "4.10.1",
        "image-webpack-loader": "^8.1.0",
        "jsonwebtoken": "^8.5.1",
        "mongodb": "^4.0.1",
        "mongoose": "^6.2.4",
        "passport": "^0.5.2",
        "passport-jwt": "^4.0.0",
        "prop-types": "^15.7.2",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-helmet": "^6.1.0",
        "react-hot-loader": "^4.13.0",
        "react-redux": "^7.2.4",
        "react-refresh": "^0.10.0",
        "react-router-dom": "^5.2.0",
        "redux": "^4.1.0",
        "redux-devtools-extension": "^2.13.9",
        "redux-thunk": "^2.3.0",
        "universal-cookie": "^4.0.4",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "@hot-loader/react-dom": "^17.0.1",
        "@pmmmwh/react-refresh-webpack-plugin": "^0.5.3",
        "autoprefixer": "^10.2.6",
        "copy-webpack-plugin": "^9.0.1",
        "css-loader": "^5.2.6",
        "css-minimizer-webpack-plugin": "^3.0.2",
        "cssnano": "^5.0.6",
        "eslint": "^7.30.0",
        "eslint-config-airbnb": "^18.2.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "2.22.0",
        "eslint-plugin-jsx-a11y": "^6.4.1",
        "eslint-plugin-prettier": "^3.4.0",
        "eslint-plugin-react": "^7.24.0",
        "eslint-plugin-react-hooks": "^4.2.0",
        "eslint-webpack-plugin": "^2.5.4",
        "glob": "^7.1.7",
        "husky": "^7.0.1",
        "jest": "^27.0.6",
        "jest-cli": "^27.0.6",
        "mini-css-extract-plugin": "^2.1.0",
        "node-hot-loader": "^1.21.4",
        "node-sass": "^7.0.1",
        "nodemon": "^2.0.11",
        "postcss": "^8.3.5",
        "postcss-import": "^14.0.2",
        "postcss-loader": "^6.1.0",
        "postcss-preset-env": "^6.7.0",
        "prettier": "^2.3.2",
        "regenerator-runtime": "^0.13.7",
        "rimraf": "3.0.2",
        "sass-loader": "^12.1.0",
        "tailwindcss": "^3.0.23",
        "thread-loader": "^3.0.4",
        "webpack": "^5.72.0",
        "webpack-cli": "^4.9.2",
        "webpack-dev-server": "^4.8.1",
        "webpack-shell-plugin": "^0.5.0"
    },
    "nodemonConfig": {
        "ignore": [
            "*.hot-update.json",
            "log.json"
        ],
        "delay": 5000
    },
    "husky": {
        "hooks": {
            "pre-commit": "cross-env npm run lint && npm test",
            "pre-push": "cross-env npm run lint && npm test"
        }
    }
}
